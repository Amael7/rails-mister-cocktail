<h1><%= @cocktail.name %></h1>

<h3>Recipe</h3>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <p><%= dose.description %> - <%= dose.ingredient.name %></p>
      <%= link_to dose_path(dose), method: 'delete', data: { confirm: "Are you sure?" } do %>
        <i class="fa fa-trash destroy_dose"></i>
      <% end %>
    </li>
  <% end %>
</ul>

<h3>Reviews</h3>
<ul>
  <% @cocktail.reviews.each do |review| %>
    <li>
      <% count = 0 %>
      <% 5.times do %>
        <% if review.rating > count %>
          <i class="fas fa-star"></i>
        <% else %>
          <i class="far fa-star"></i>
        <% end %>
        <% count += 1 %>
      <% end %>
      <p><%= review.content %></p>
    </li>
  <% end %>
</ul>


<div>
  <%= render "doses/new", cocktail: @cocktail, dose: @dose %>
</div>

<div>
  <%= render "reviews/new", cocktail: @cocktail, review: @review %>
</div>

<%= link_to 'Back to the list', cocktails_path %>
